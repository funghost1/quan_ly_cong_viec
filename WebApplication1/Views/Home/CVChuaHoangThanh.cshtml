                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: @Html.DisplayFor(modelItem => item.TY_LE_HOAN_THANH)%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.TRANGTHAICONGVIEC.TEN_TRANG_THAI) @Html.DisplayFor(modelItem => item.TY_LE_HOAN_THANH)%<!--55% --></span></td>
                        <td>
                            <div class="container">
                                <h4><span class="badge bg-info">  @Html.ActionLink("Cập Nhạt Tỉ Lệ", "EditCVDuocgiao", new { id = item.ID_CONG_VIEC }) </span>&ensp;<span class="badge bg-success">@Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.ID_CONG_VIEC })</span></h4>

                            </div>


                        </td>

                    </tr>

