
@model IEnumerable<WebApplication1.Models.CONGVIEC>

@{
    ViewBag.Title = "CVChuaHoangThanh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
        <br />
        <h3 class="card-title">CÔNG VIỆC ĐƯỢC GIAO CHƯA HOÀN THÀNH</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
