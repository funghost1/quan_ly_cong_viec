@model IEnumerable<WebApplication1.Models.CONGVIEC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card-body pb-0 float-right">

                <ul class="navbar-nav ">
                    <li class="nav-item dropdown">
                        <a class="nav-link" data-toggle="dropdown" href="#">
                            NHẮC VIỆC
                            <i class="far fa-bell fa-3x"> <span class="badge badge-danger navbar-badge">@ViewBag.CountNhatViec</span></i>


                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <span class="dropdown-item dropdown-header">@ViewBag.Count Công việc</span>
                            <div class="dropdown-divider"></div>
                            <a href="http://localhost:50959/Home/nhatviec" class="dropdown-item">
                                <i class="fas fa-list-alt mr-2"></i>Công việc sắp hết hạn
                                <span class="float-right text-muted text-sm">Còn @ViewBag.CountNhatViec </span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="http://localhost:50959/Home/CVChuaHoangThanh" class="dropdown-item">
                                <i class="fas fa-list-ol mr-2"></i> Công việc chưa hoàn thành
                                <span class="float-right text-muted text-sm">Còn @ViewBag.CountCHT</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="http://localhost:50959/Home/CVDuocgiao" class="dropdown-item dropdown-footer">Xem tất cả công việc</a>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <div class="card card-widget widget-user">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header bg-secondary">
            <h3 class="widget-user-username">TÊN NGƯỜI DÙNG</h3>
            <h5 class="widget-user-desc">ĐƠN VỊ</h5>
        </div>
        <div class="widget-user-image">
            <img class="img-circle elevation-2" src="/test/dist/img/user2-160x160.jpg" alt="User Avatar">
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-sm-4 border-right">
                    <div class="description-block">
                        <h1 class="">@ViewBag.Count</h1>

                        <span class="description-text"><b>VIỆC ĐƯỢC GIAO</b></span>
                    </div>
                    <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4 border-right">
                    <div class="description-block">
                        <h1 class="">@ViewBag.CountHT / @ViewBag.Count</h1>
                        <span class="description-text"><b>ĐÃ HOÀN THÀNH</b></span>
                    </div>
                    <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4">
                    <div class="description-block">
                        <h1 class=""> @ViewBag.Count1</h1>
                        <span class="description-text"><b>VIỆC ĐÃ GIAO</b></span>
                    </div>
                    <!-- /.description-block -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <!-- /.widget-user -->
</div>

<div class="row">
    <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-secondary mb-2">
            <div class="card-body pb-0">
                <div class="text-value" id="">
                    <h1>@ViewBag.Count1</h1>
                </div>

                <div>TỔNG SỐ CÔNG VIỆC ĐÃ GIAO</div>

                <!--<div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.1.0
                </div>-->
            </div>
        </div>
        <button class="btn btn-secondary btn-sm form-control text-white bg-secondary" id="refreshBaoCaoSanPham">@Html.ActionLink("XEM DANH SÁCH", "CVDagiao")</button>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-warning mb-2">
            <div class="card-body pb-0">
                <div class="text-value" id="">
                    <h1>@ViewBag.Count</h1>
                </div>
                <div>TỔNG SỐ CÔNG VIỆC ĐÃ NHẬN</div>
            </div>
        </div>
        <button class="btn btn-warning btn-sm form-control text-white bg-warning" id="refreshBaoCaoKhachHang">@Html.ActionLink("XEM DANH SÁCH", "CVDuocgiao")</button>
    </div> <!-- Tổng số đơn hàng -->
    <!-- Tổng số mặt hàng -->
    <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-success mb-2">
            <div class="card-body pb-0">
                <div class="text-value" id="">
                    <h1>@ViewBag.CountHT</h1>
                </div>
                <div>CÔNG VIỆC HOÀN THÀNH </div>
            </div>
        </div>
        <button class="btn btn-success btn-sm form-control bg-success" id="">@Html.ActionLink("XEM DANH SÁCH", "CVHoangThanh")</button>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-danger mb-2">
            <div class="card-body pb-0">
                <div class="text-value" id="">
                    <h1>@ViewBag.CountCHT</h1>
                </div>
                <div>CÔNG VIỆC CHƯA HOÀN THÀNH</div>
            </div>
        </div>

        <button class="btn btn-danger btn-sm form-control bg-danger" id="">@Html.ActionLink("XEM DANH SÁCH", "CVChuaHoangThanh")</button>
    </div> <!-- Tổng số góp ý -->

</div>
<br />
<div class="container" id="create" align="center">
    <button class="btn btn-info btn-group-lg form-control text-white bg-info col-lg-4" id="create">@Html.ActionLink("TẠO CÔNG VIỆC", "Create") </button>
</div>

