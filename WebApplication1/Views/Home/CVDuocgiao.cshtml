@model IEnumerable<WebApplication1.Models.CONGVIEC>

@{
    ViewBag.Title = "CVDuocgiao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<h2>Công Việc Được Giao</h2>

<p>
    @using (Html.BeginForm("CVDuocgiao", "Home", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
    {
        <div class="form-group col-md-6" width="200px;"><input type="text" name="strSearch" placeholder="Tìm kiếm" class="form-control" value="@ViewBag.strSearch" /></div>
        <div class="form-group">&nbsp;<button type="submit" class="btn btn-default">Tìm Kiếm</button></div>
    }
</p>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">DANH SÁCH CÔNG VIỆC ĐƯỢC GIAO</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>TÊN CÔNG VIỆC</th>
                    <th>NGƯỜI GỬI</th>
                    <th>Độ Quan Trọng</th>
                    <th>TỈ LỆ HOÀN THÀNH</th>
                    <th style="width: 40px">TRẠNG THÁI</th>
                    <th>TRUY VẤN</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TIEU_DE)</td>
                        <td>@Html.DisplayFor(modelItem => item.NHANVIEN.HO_TEN) </td>
                        <td>@Html.DisplayFor(modelItem => item.DOQUANTRONG.TEN_DO_QUAN_TRONG)</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: @Html.DisplayFor(modelItem => item.TY_LE_HOAN_THANH)%"></div>
                            </div>
                        </td>

                        <td><span class="badge bg-danger"> @Html.DisplayFor(modelItem => item.TRANGTHAICONGVIEC.TEN_TRANG_THAI) @Html.DisplayFor(modelItem => item.TY_LE_HOAN_THANH)%<!--55% --></span></td>
                        <td>
                            <div class="container">
                                <h4><span class="badge bg-info">  @Html.ActionLink("Cập Nhật Tỉ Lệ", "EditCVDuocgiao", new { id = item.ID_CONG_VIEC }) </span>&ensp;<span class="badge bg-success">@Html.ActionLink("Xem Chi Tiết", "Details", new { id = item.ID_CONG_VIEC })</span></h4>

                            </div>


                        </td>

                    </tr>
                </tbody>
            }
        </table>
        <div class="card-footer" align="center">
            <button class="btn btn-light col-lg-1"> @Html.ActionLink("Trở về", "Index")</button>
        </div>
    </div>








