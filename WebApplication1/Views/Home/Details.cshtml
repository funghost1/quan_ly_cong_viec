@model WebApplication1.Models.CONGVIEC

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-primary"><br />
    <div class="card-header">
        
        <h3 class="card-title">CHI TIẾT CÔNG VIỆC ĐƯỢC GIAO</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
               
                <tr style="width=20%">
                    <th>TÊN CÔNG VIỆC</th>
                    <td> @Html.DisplayFor(model => model.TIEU_DE)</td>
                </tr>
                <tr>
                    <th>ĐỘ QUAN TRỌNG</th>
                    <td>@Html.DisplayFor(model => model.DOQUANTRONG.TEN_DO_QUAN_TRONG)</td>
                </tr>
                <tr>
                    <th>NGƯỜI GỬI</th>
                    <td>@Html.DisplayFor(model => model.NHANVIEN.HO_TEN)</td>
                </tr>
                <tr>
                    <th>MÃ NGƯỜI NHẬN</th>
                    <td>@Html.DisplayFor(model => model.ID_NGUOI_NHAN)</td>
                </tr>
                <tr>
                    <th>MÃ LĨNH VỰC</th>
                    <td>@Html.DisplayFor(model => model.LINHVUC.MA_LINH_VUC)</td>
                </tr>
                <tr>
                    <th>NỘI DUNG</th>
                    <td>@Html.DisplayFor(model => model.NOI_DUNG)</td>
                </tr>
                <tr>
                    <th>KIỂU TẬP TIN</th>
                    <td>@Html.DisplayFor(model => model.FILEDINHKEM.KIEU_TAP_TIN)</td>
                </tr>
                <tr>
                    <th>TỈ LỆ HOÀN THÀNH</th>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: @Html.DisplayFor(model => model.TY_LE_HOAN_THANH)%"></div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>TRẠNG THÁI</th>
                    <td><span class="badge bg-success" style="width: 200px;">@Html.DisplayFor(model => model.TRANGTHAICONGVIEC.TEN_TRANG_THAI) @Html.DisplayFor(model => model.TY_LE_HOAN_THANH)%</span></td>
                </tr>

                <tr>
                    <th>NGÀY GỬI</th>
                    <td> @Html.DisplayFor(model => model.NGAY_GUI)</td>
                </tr>
                <tr>
                    <th>NGÀY HẾT HẠN</th>
                    <td> <b style="color:red;">@Html.DisplayFor(model => model.NGAY_HET_HAN)</b></td>
                </tr>


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer" align="center">
        <button class="btn btn-light col-lg-1"> @Html.ActionLink("Trở về", "Index")</button>
    </div>
    </form>
</div>